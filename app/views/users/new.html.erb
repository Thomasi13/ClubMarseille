<div class="center jumbotron">
  <h1>Inscription</h1>
  <br/><br/>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @user do |f| %>

          <div class="form-group">
            <%= f.label :firstname %>
            <%= f.text_field :firstname, placeholder: 'Batman', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :lastname %>
            <%= f.text_field :lastname, placeholder: 'Hayne', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder: 'batman@gmail.com', class: 'form-control' %>
          </div>

          <br/>

          <%= f.submit "Sign in", class: "btn btn-primary" %>

        <% end %>
        
        
      </div>
    </div>
</div>
